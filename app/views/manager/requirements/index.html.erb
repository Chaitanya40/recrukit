<div class="ibox">
  <div class="ibox-title">
    <h5 style="display:inline-box;margin-top:10px;">My requirements</h5>
      <%= link_to 'Add Requirement', new_manager_requirement_path ,method: :get, class:'btn btn-info pull-right  btn-sm'%>
      <%= link_to "Assign", "#my-modal", :style => "margin-right:10px", :class => "btn btn-sm btn-info pull-right", "data-toggle" => "modal" %>

  </div>
  <div class="ibox-content">
  	<% if @requirements.length > 0 %>
  		<table class="table table-striped table-bordered">
  			<thead>
          <th></th>
  				<th>Id</th>
  				<th>Skills</th>
  				<th>Experience</th>
  				<th>Location</th>
  			</thead>
  			<tbody>
  				<% @requirements.each do |req| %>
  					<tr>
              <td><%= check_box_tag 'req_ids[]', req.id -%></td>
  						<td><%= req.id %></td>
  						<td>
  							<%= req.skills.join(", ")%>
  						</td>
  						<td>
  							<%= req.experience %>
  						</td>
  						<td>
  							<%= "#{req.city}, #{req.state}" %>
  						</td>
  					</tr>
  				<% end %>
  			</tbody>
  		</table>
  	<% else %>
  	<% end %>
  </div>
</div>

<div class="modal inmodal fade" id="my-modal" title="My modal">
  <div class= "modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button aria-hidden="true" class="close" data-dismiss="modal" type="button">Ã—</button>
        <h3 id="myModalLabel" class="text-center">Recruiters</h3>
      </div>
      <div class="modal-body">
        <%= render 'recruiters' %>
      </div>  
      <div class="modal-footer">
        <%= link_to 'Assign requirements',{remote: true},class:'btn btn-info btn-sm pull-left', id: 'assign-button'%>
        <button aria-hidden="true" class="btn" data-dismiss="modal">Close</button>
      </div>
    </div>  
  </div>    
</div>

