<div class="ibox">
	<div class="ibox-title">
		<div class="row">
			<div class="col-md-12 col-xs-12">
				<div class="col-xs-6 col-md-6"><strong>Submission ID: <%= @submission.id %></strong></div>
				<div class="col-xs-6 col-md-6"><p class="pull-right"><strong>Recruiter: </strong><%=@submission.recruiter.email %></p>
			</div>  
		</div>
	<div>
	<div class="ibox-content">
		<div class=row>
			<div class="col-xs-12 col-md-12">
				<div class="col-xs-4 col-md-6">
					<strong>Created at :</strong>
				</div>
				<div class="col-xs-8 col-md-6">
					<span>
						<%= @submission.created_at %>
					</span>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-xs-12 col-md-12">
				<div class="col-xs-4 col-md-6">
					<strong>Skills : </strong>
				</div>
				<div class="col-xs-8 col-md-6">
					<%= @profile.skills.join(", ") %>
				</div>
			</div>
		</div>

		<div class="row">			
			<div class="col-xs-12 col-md-12">
				<div class="col-xs-4 col-md-6">
					<strong>Location:</strong>
				</div>
				<div class="col-xs-8 col-md-6">
					<%= @profile.city+", "+ @profile.state %>
				</div>
			</div>
		</div>

		<div class="row">	
			<div class="col-xs-12 col-md-12">
				<div class="col-xs-4 col-md-6">
					<strong>First Name:</strong>
				</div>
				<div class="col-xs-8 col-md-6">
					<%= @profile.first_name %>
				</div>
			</div>
		</div>

		<div class="row">	
			<div class="col-xs-12 col-md-12">
				<div class="col-xs-4 col-md-6">
					<strong>Last Name:</strong>
				</div>
				<div class="col-xs-8 col-md-6">
					<%= @profile.last_name %>
				</div>
			</div>
		</div>

		<div class="row">	
			<div class="col-xs-12 col-md-12">
				<div class="col-xs-4 col-md-6">
					<strong>Experience:</strong>
				</div>
				<div class="col-xs-8 col-md-6">
					<%=@profile.experience.to_s %>
				</div>
			</div>	
		</div>
		
	</div>
		
	<div class="ibox-content">
		<h4 class="text-center">Resume</h4>
		<!-- <iframe src=<%= @profile.resume.url %> width="100%" height="780" style="border: none;"> </iframe> -->
		<div id="wrapper">
			<object data="<%=@profile.resume.url %>" style="width: 100%; height: 350px; display: block;" >
			<p>Your web browser doesn't have a PDF Plugin. Instead you can <a href="http://partners.adobe.com/public/developer/en/acrobat/PDFOpenParameters.pdf"> Click
				here to download the PDF</a></p>
			</object>
		</div>
		<div class="ibox-title">
			<%= button_tag "Send Email", {type: "button", class:"btn btn-sm btn-info pull-right", id: "emailButton"} %>
			<%= hidden_field_tag :requirement_id, params[:requirement_id] %>
			<%= hidden_field_tag :submission_id, params[:id] %>
		</div>
		<div class="ibox-content" id="comments-section">
			<h4 class="text-center">Comments</h5>
			<div class="comments well">
				<ol class="comment-list">
					<li><p> This requirement needs more information</p></li>	
					<li><p> This requirement needs more information</p></li>
					<li><p> This requirement needs more information</p></li>
					<li><p> This requirement needs more information</p></li>
					<li><p> This requirement needs more information</p></li>
					<li><p> This requirement needs more information</p></li>
					
				</ol>
			</div>
			<div class="row">
				<div class="form-group col-xs-10 col-md-10">
      		<input name="comment" type="text" class="form-control" value="" placeholder="Comment" required>
    		</div>
    		<div class="col-xs-2 col-md-2">
    			<button type="button" id="add-comment" class="btn btn-primary btn-sm pull-right">Add</button>
    		</div>
    	</div>	
			
		</div>
 	</div>
</div>	
		