<div class="ibox">
  <div class="ibox-title">
  	<div class="row">
  		<div class="col-xs-6"> 
  			<h5>Clients</h5>
  		</div>
  		<div class="col-xs-6">
  			<%= link_to "Add client", new_manager_client_path, {class: "btn btn-info btn-sm pull-right"} %>
  		</div>
  	</div>
  </div>
  <div class="ibox-content">
  	<div class="table-responsive">
  		<table class="table table-striped table-bordered">
  			<thead>
  				<th>Id</th>
  				<th>Name</th>
  				<th>Email</th>
  				<th>Company</th>
  			</thead>
  			<tbody>
  				<% @clients.each do |client| %>
  					<tr>
  						<td><%= client.id %> </td>
  						<td><%= client.first_name+ " " + client.last_name %> </td>
  						<td><%= client.email %> </td>
  						<td><%= client.company %> </td>
  					</tr>
  				<% end %>	
  			</tbody>
  		</table>	

  		
  	</div>
  </div>
</div>  