<%= form_for(@client, :url => manager_clients_path, method: :post) do |f| %>
	<div class="row">
    <div class="form-group col-xs-12 col-md-6">
      <label class="font-noraml">First Name</label>
      <input name="client[first_name]" type="text" class="form-control" value="" placeholder="Enter first name" required>
    </div>

    <div class="form-group col-xs-12 col-md-6">
      <label class="font-noraml">Last Name</label>
      <input name="client[last_name]" type="text" class="form-control" value="" placeholder="Enter last name" required>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-xs-12 col-md-6">
      <label class="font-noraml">Email</label>
      <input name="client[email]" type="text" class="form-control" value="" placeholder="Enter email" required>
    </div>

    <div class="form-group col-xs-12 col-md-6">
      <label class="font-noraml">Email</label>
      <input name="client[company]" type="text" class="form-control" value="" placeholder="Enter company" required>
    </div>
  </div>
  <%= f.submit "Save", class: "btn btn-info"%>
<% end %>