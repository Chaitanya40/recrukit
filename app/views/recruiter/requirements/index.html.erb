<div class="ibox">
  <div class="ibox-title">
    <h5 style="display:inline-box;margin-top:10px;">Assigned Requirements</h5>
  </div>
  <div class="ibox-content">
  	<% if @requirements.length > 0 %>
  		<table class="table table-striped">
  			<thead>
  				<th>Title</th>
          <th>Description</th>
          <th>Created By</th>
          <th>Created at</th>
          <th>Status</th>
  			</thead>
  			<tbody>
  				<% @requirements.each do |req| %>
  					<tr>
  						<td>
  						  <%= link_to "#{req.title}", recruiter_requirement_path(id: req.id) %>
              </td>
  						<td>
                <%= req.description[0..40]+"..." %>
  						</td>
  						<td>
                <%= req.manager.email %>
              </td>
              <td>
  						  <%= req.created_at %>
              </td>
              <td><span class="label <%= req.color_code%>">
                <% if req.status == "fresh" %>
                  New
                <% else %>
                  <%= req.status.capitalize %>
                <% end %>     
              </span></td>
  					</tr>
  				<% end %>
  			</tbody>
  		</table>
  	<% else %>
  	<% end %>
  </div>
</div>    