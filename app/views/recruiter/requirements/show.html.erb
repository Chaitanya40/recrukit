<div class="ibox">
	<div class="ibox-title">
		<span><h5>Requirement ID: <%= @requirement.id %></h5></span>
		<%= link_to "Create new submission",  new_recruiter_requirement_submission_path(requirement_id: @requirement.id), {class: "btn btn-sm btn-info pull-right"} %>
	</div>
	<div class="ibox-content">
		<div class="row">
			<div class="col-xs-6">
				<h3><%= @requirement.title %></h3>
				<br>
				<p><%= @requirement.description %></p>
			</div>
			<div class="col-xs-6">
				<span>Status&nbsp;:&nbsp;</span>
				<p class="label <%= @requirement.color_code%>">
          <% if @requirement.status == "fresh" %>
            New
          <% else %>
            <%= @requirement.status.capitalize %>
          <% end %>     
        </p>
        <br>
        <br>
        <span>Manager: &nbsp;&nbsp;</span>
        <%= @requirement.manager.email %>
			</div>
		</div>
	</div>
	<div class="ibox-content">
		<div class="row">
			<div class="col-xs-3">
				<h5>Requirement ID :</h5>
			</div>
			<div class="col-xs-3">
				<span><%= @requirement.id %></span>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-3">
				<h5>Skills required : </h5>
			</div>
			<div class="col-xs-3">
				<span><%= @requirement.skills.join(", ")%></span>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-3">
				<h5>Experience level : </h5>
			</div>
			<div class="col-xs-3">
				<span><%= @requirement.experience %></span>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-3">
				<h5>Created by : </h5>
			</div>
			<div class="col-xs-3">
				<span><%= @requirement.manager.email %></span>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-3">
				<h5>Location : </h5>
			</div>
			<div class="col-xs-3">
				<span><%= @requirement.city + ",  " + @requirement.state %></span>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-3">
				<h5>Created at : </h5>
			</div>
			<div class="col-xs-3">
				<%= @requirement.created_at %>
			</div>
		</div>
	</div>
	<div class="ibox-content">
		<h3>My submissions</h3>
		<br>
		<table class="table table-striped table-bordered">
			<thead>
				<th></th>
				<th>Submission ID</th>
				<th>Submitted at</th>
				<th>First Name</th>
				<th>Last Name</th>
			</thead>
			<tbody>
				<% if @submissions.count > 0%>
					<% @submissions.each  do |submission| %>
						<tr>
							<td><%= link_to "View", recruiter_requirement_submission_path(id: submission.id, requirement_id: submission.requirement.id) %></td>
							<td><%= submission.id %></td>
							<td><%= submission.created_at %></td>
							<td><%= submission.profile.first_name%></td>
							<td><%= submission.profile.last_name%></td>
						</tr>
					<% end %>
				<% end %>	
			</tbody>
		</table>
	</div>
</div>